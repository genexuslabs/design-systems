{
  "name": "@genexus/mercury",
  "version": "0.1.1",
  "description": "Mercury is the design system designed for GeneXus IDE Web and GeneXus Next",
  "main": "dist/mercury.scss",
  "files": [
    "dist/"
  ],
  "type": "module",
  "scripts": {
    "copy-assets": "fse copy --all --keepExisting --errorOnExist --dereference --preserveTimestamps --quiet src/assets/ dist/assets",
    "build": "npm run icons-svg && npm run icons-sass && npm run copy-assets && npm run build.scss",
    "build-no-svg": "npm run copy-assets && npm run build.scss",
    "build.scss": "scss-bundle -e ./src/mercury.scss -o dist/mercury.scss && sass test/test.scss dist/css/mercury.css",
    "test": "sass test/test.scss  test/mercury.css",
    "validate.ci": "npm run build-no-svg",
    "icons-svg": "ssg-svg ./src/icons/generable ./src/assets/icons/ .config/color-states.json ./www/icons ./log",
    "icons-sass": "ssg-sass ./src/assets/icons/.generated ./src/icons",
    "watch:sass": "chokidar src/**/*.scss ../common/**/*.scss -c \"npm run build.scss\""
  },
  "license": "MIT",
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.9",
    "chokidar": "^3.6.0",
    "chokidar-cli": "^3.0.0",
    "sass": "~1.72.0",
    "scss-bundle": "~3.1.2",
    "svg-sass-generator": "file:../svg-sass-generator"
  },
  "engines": {
    "pnpm": ">=3"
  },
  "dependencies": {
    "i": "^0.3.7",
    "npm": "^10.8.0"
  }
}
