{
  "name": "@genexus/mercury",
  "version": "0.1.1",
  "description": "Mercury is the design system designed for GeneXus IDE Web and GeneXus Next",
  "main": "dist/mercury.scss",
  "files": [
    "dist/"
  ],
  "type": "module",
  "scripts": {
    "copy-assets": "fse copy --all --errorOnExist --dereference --preserveTimestamps --quiet src/assets/ dist/assets",
    "build": "npm run svg-sass && npm run copy-assets && npm run build.scss",
    "build.scss": "scss-bundle -e ./src/mercury.scss -o dist/mercury.scss && sass test/test.scss www/assets/mercury.css",
    "build--watch.scss": "scss-bundle --rootDir ./src --watch -e ./src/mercury.scss -o dist/mercury.scss",
    "test": "sass test/test.scss  test/mercury.css",
    "validate.ci": "npm run build",
    "icons-svg": "ssg-svg ./src/icons ./src/assets/icons/ .config/color-states.json ./www/icons ./log",
    "icons-sass": "ssg-sass ./src/assets/icons/.generated ./src/icons",
    "www": "npm run build.scss && "
  },
  "license": "MIT",
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.9",
    "sass": "~1.72.0",
    "scss-bundle": "~3.1.2",
    "chokidar": "^3.6.0",
    "svg-sass-generator": "file:../svg-sass-generator"
  },
  "engines": {
    "pnpm": ">=3"
  }
}
