{
  "type": "object",
  "properties": {
    "monochrome": {
      "type": "object",
      "properties": {
        "states": {
          "type": "object",
          "patternProperties": {
            "^on-[a-zA-Z]+$": {
              "type": "object",
              "properties": {
                "light": { "type": "string" },
                "dark": { "type": "string" }
              }
            }
          }
        },
        "icons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "folder": { "type": ["string", "null"] },
              "states": {
                "type": "object",
                "patternProperties": {
                  "^on-[a-zA-Z]+$": { "type": "boolean" }
                }
              }
            },
            "required": ["folder", "states"]
          }
        }
      },
      "required": ["states", "icons"]
    }
  },
  "required": ["monochrome"]
}
