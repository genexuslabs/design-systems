{
  "type": "object",
  "properties": {
    "monochrome": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "states": {
                "type": "object",
                "enabled": {
                  "type": "object",
                  "properties": {
                    "light": { "type": "string" },
                    "dark": { "type": "string" }
                  }
                },
                "hover": {
                  "type": "object",
                  "properties": {
                    "light": { "type": "string" },
                    "dark": { "type": "string" }
                  }
                },
                "active": {
                  "type": "object",
                  "properties": {
                    "light": { "type": "string" },
                    "dark": { "type": "string" }
                  }
                },
                "disabled": {
                  "type": "object",
                  "properties": {
                    "light": { "type": "string" },
                    "dark": { "type": "string" }
                  }
                }
              },
              "required": ["enabled"]
            },
            "required": ["name", "states"]
          }
        },
        "icons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "folder": { "type": ["string", "null"] },
              "states": {
                "type": "object",
                "patternProperties": {
                  "^on-[a-zA-Z]+$": { "type": "boolean" }
                }
              }
            },
            "required": ["folder", "states"]
          }
        }
      },
      "required": ["states", "icons"]
    }
  },
  "required": ["monochrome"]
}
