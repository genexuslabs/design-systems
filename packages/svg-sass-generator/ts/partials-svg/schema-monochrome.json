{
  "type": "object",
  "properties": {
    "monochrome": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "states": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "object",
                    "properties": {
                      "light": { "type": "string" },
                      "dark": { "type": "string" }
                    },
                    "required": ["light", "dark"]
                  },
                  "hover": {
                    "anyOf": [
                      {
                        "type": "object",
                        "properties": {
                          "light": { "type": "string" },
                          "dark": { "type": "string" }
                        },
                        "required": ["light", "dark"]
                      },
                      { "type": "null" }
                    ]
                  },
                  "active": {
                    "anyOf": [
                      {
                        "type": "object",
                        "properties": {
                          "light": { "type": "string" },
                          "dark": { "type": "string" }
                        },
                        "required": ["light", "dark"]
                      },
                      { "type": "null" }
                    ]
                  },
                  "disabled": {
                    "anyOf": [
                      {
                        "type": "object",
                        "properties": {
                          "light": { "type": "string" },
                          "dark": { "type": "string" }
                        },
                        "required": ["light", "dark"]
                      },
                      { "type": "null" }
                    ]
                  }
                },
                "required": ["enabled", "hover", "active", "disabled"]
              }
            },
            "required": ["name", "states"]
          }
        },
        "iconsCategories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "folder": { "type": ["string"] },
              "colors": {
                "type": "object",
                "patternProperties": {
                  "^on-[a-zA-Z]+$": { "type": "boolean" }
                }
              },
              "colorsExist": true
            },
            "required": ["folder", "colors"]
          }
        }
      },
      "required": ["colors", "iconsCategories"]
    }
  },
  "required": ["monochrome"]
}
